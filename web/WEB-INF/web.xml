<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SiblingServlet</servlet-name>
        <servlet-class>servelet.SiblingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>servelet.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApplications</servlet-name>
        <servlet-class>servelet.ViewApplications</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewUserServlet</servlet-name>
        <servlet-class>servelet.addNewUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveSchool</servlet-name>
        <servlet-class>servelet.ApproveSchool</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculateMarksServlet</servlet-name>
        <servlet-class>servelet.CalculateMarksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SiblingServlet</servlet-name>
        <url-pattern>/SiblingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApplications</servlet-name>
        <url-pattern>/ViewApplications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewUserServlet</servlet-name>
        <url-pattern>/addNewUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveSchool</servlet-name>
        <url-pattern>/ApproveSchool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculateMarksServlet</servlet-name>
        <url-pattern>/CalculateMarksServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
